<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.festival.newfestival.CreateMovieFragment">

    <data>
        <variable
            name="viewmodel"
            type="com.example.parcial.ui.movie.viewmodel.FestivalViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/medium_padding"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_new_festival"
            android:textSize="@dimen/big_text"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingBottom="@dimen/medium_extra_padding"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_name"
            android:textColorHint="@color/white"
            app:hintTextColor="@color/white"
            android:paddingBottom="@dimen/medium_extra_padding"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newmoviename"
                android:text="@={viewmodel.name}"
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/cardLayout"/>

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_description"
            android:textColorHint="@color/white"
            app:hintTextColor="@color/white"
            android:paddingBottom="@dimen/medium_extra_padding"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newdescriptionmovie"
                android:text="@={viewmodel.description}"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:background="@color/cardLayout"/>

        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_enviar"
            android:backgroundTint="@color/black"
            android:textSize="@dimen/text_button_size"
            android:onClick="@{() -> viewmodel.createFestival()}">

        </Button>




    </LinearLayout>


</layout>
